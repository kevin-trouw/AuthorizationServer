@model IEnumerable<AuthorizationServer.Models.EnvironmentModel>

@{
    ViewBag.Title = "Apps";
}

<h2>Apps</h2>

<p>
    @Html.ActionLink("Add new app", "AppAddOrEdit")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayName("App name")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td><img src="~/Content/images/app-icon.png" /></td>
        <td>
            @Html.DisplayFor(modelItem => item.AppName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit App", "AppAddOrEdit", new { id = item.AppID })<br />
            @Html.ActionLink("View Roles", "AppViewRole", new { id = item.AppID })<br />
            @Html.ActionLink("View PermissionGroups", "AppViewPermissionGroup", new { id = item.AppID })<br />
            @Html.ActionLink("Delete", "DeleteApp", new { id = item.AppID })
        </td>
    </tr>
}
</table>
<div>
    @Html.ActionLink("Go Back", null, null, null, new { href = Request.UrlReferrer })
</div>
